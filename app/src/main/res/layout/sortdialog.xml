<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="100dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <TextView
                android:id="@+id/sort_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:paddingTop="15dp"
                android:text="Sort By"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sortby_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sort_head"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:text="By Name"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="125dp"
                android:layout_toRightOf="@id/sortby_name">

                <RadioButton
                    android:id="@+id/nameSort_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/release_sort_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp" />

                <RadioButton
                    android:id="@+id/popularBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    />
                <RadioButton
                    android:id="@+id/topRatedBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"

                    />

            </RadioGroup>

            <TextView
                android:id="@+id/release_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sortby_name"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:text="Release Date"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/release_sort"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:text="Popular Movies"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/topBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popular"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:text="Top Rated Movies"
                android:textStyle="bold" />


            <Button
                android:id="@+id/sort_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/topBtn"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/release_sort"
                android:background="@drawable/msv_filter_background"
                android:text="@string/ok"
                android:textAlignment="center" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>